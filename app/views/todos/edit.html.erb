<h1>TODOを編集</h1>

<%= form_with model: @todo, local: true, class: "row g-3" do |form| %>
  <% if @todo.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@todo.errors.count, "error") %> prohibited this todo from being saved:</h4>
      <ul class="mb-0">
        <% @todo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-12">
    <%= form.label :title, "タイトル", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="col-12">
    <%= form.label :description, "説明", class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="col-12">
    <div class="form-check">
      <%= form.check_box :completed, class: "form-check-input" %>
      <%= form.label :completed, "完了済み", class: "form-check-label" %>
    </div>
  </div>

  <div class="col-12">
    <%= form.submit "TODOを更新", class: "btn btn-primary" %>
    <%= link_to "詳細を見る", @todo, class: "btn btn-secondary" %>
    <%= link_to "一覧に戻る", todos_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h1 class="mb-0">
          <% if @todo.completed? %>
            <span class="badge bg-success me-2">完了</span>
            <s><%= @todo.title %></s>
          <% else %>
            <span class="badge bg-warning me-2">未完了</span>
            <%= @todo.title %>
          <% end %>
        </h1>
      </div>
      
      <div class="card-body">
        <% if @todo.description.present? %>
          <h5>説明</h5>
          <p class="card-text"><%= simple_format(@todo.description) %></p>
        <% end %>
        
        <hr>
        
        <p class="text-muted">
          <small>
            作成日時: <%= @todo.created_at.strftime("%Y年%m月%d日 %H:%M") %><br>
            更新日時: <%= @todo.updated_at.strftime("%Y年%m月%d日 %H:%M") %>
          </small>
        </p>
      </div>
      
      <div class="card-footer">
        <div class="btn-group" role="group">
          <%= link_to "編集", edit_todo_path(@todo), class: "btn btn-secondary" %>
          <% if @todo.completed? %>
            <%= link_to "未完了に戻す", toggle_todo_path(@todo), method: :patch, class: "btn btn-warning" %>
          <% else %>
            <%= link_to "完了にする", toggle_todo_path(@todo), method: :patch, class: "btn btn-success" %>
          <% end %>
          <%= link_to "削除", @todo, method: :delete, 
                      confirm: "本当に削除しますか？", 
                      class: "btn btn-danger" %>
        </div>
        
        <div class="float-end">
          <%= link_to "一覧に戻る", todos_path, class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>